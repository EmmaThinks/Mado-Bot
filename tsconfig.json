{
  "compilerOptions": {
    /* Configuración básica para Node.js moderno */
    "target": "ES2022" /* Soluciona error: Private identifiers */,
    "module": "NodeNext" /* Soluciona error: import.meta */,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true /* Soluciona error: Module has no default export (fs, path, dotenv) */,
    "skipLibCheck": true /* Ignora errores dentro de node_modules (discord.js) */,
    "forceConsistentCasingInFileNames": true,

    /* Directorios */
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
